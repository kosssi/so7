mixin portfolio(name, url, modal)
  .col-sm-6.portfolio-item.text-center.col-md-4
    a.portfolio-link(href=modal, data-toggle='modal')
      .caption
        .caption-content
          i.fa.fa-search-plus.fa-3x
      img.img-responsive(src=url, alt=name)

// Portfolio Grid Section
section#portfolio
  .container
    .row
      .col-lg-12.text-center
        h2 Réalisation
        h4 Quelques projets en recettes...
        div
          p Entreprises de toutes contrées, dirigeant en quête d'une communication visuelle colorée,
          p PME fraîchement lancée, service communication overbooké, pour détenteur d'un projet vitaminé...
          p J'aime créer et travailler pour tous les publics. La preuve en images...
    .row
      +portfolio('', 'img/portfolio/ABC.jpg', '#portfolioModal1')
      +portfolio('', 'img/portfolio/home.jpg', '#portfolioModal2')
      +portfolio('', 'img/portfolio/scoot.jpg', '#portfolioModal3')
      +portfolio('', 'img/portfolio/soft.jpg', '#portfolioModal4')
      +portfolio('', 'img/portfolio/yr.jpg', '#portfolioModal5')
      +portfolio('', 'img/portfolio/yr1.jpg', '#portfolioModal6')
